{
  "name": "vivacoronia-backend",
  "version": "0.0.1",
  "description": "Backend for Corona Tracing App",
  "main": "dist/index.js",
  "scripts": {
    "start": "tsc && node build/index.js",
    "test": "jest",
    "watch": "nodemon",
    "tsc": "tsc",
    "lint": "eslint ./src/ --ext .ts",
    "dev": "docker-compose build && docker-compose up -d",
    "prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml build && docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "postinstall": "patch-package"
  },
  "repository": {
    "type": "git",
    "url": "git@git.rwth-aachen.de:iptk/ss20/team-foxtrot/backend.git"
  },
  "author": "Team Foxtrot @ IPTK TU Darmstat",
  "license": "ISC",
  "dependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.6",
    "@types/js-yaml": "^3.12.5",
    "@types/jsrsasign": "^8.0.3",
    "@types/mongoose": "^5.7.28",
    "@types/node": "^14.0.14",
    "@types/swagger-ui-express": "^4.1.2",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "js-yaml": "^3.14.0",
    "jsrsasign": "^8.0.20",
    "mongoose": "^5.9.20",
    "patch-package": "^6.2.2",
    "swagger-ui-express": "^4.1.4",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/mongodb-memory-server": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "jest": "^26.1.0",
    "mongodb-memory-server": "^6.6.1",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2"
  },
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "\\/__tests__\\/.+\\.(test|spec)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "verbose": true
  }
}
