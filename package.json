{
  "name": "vivacoronia-backend",
  "version": "0.1.0",
  "description": "Backend for Corona Tracing App",
  "main": "dist/index.js",
  "scripts": {
    "start": "tsc && node build/index.js",
    "test": "mocha --require ts-node/register test/**.test.ts --exit",
    "precommit": "npm install && npm run tsc && npm run lint && npm run test",
    "watch": "nodemon",
    "tsc": "tsc",
    "lint": "eslint ./src/ --ext .ts",
    "lintfix": "eslint ./src/ --ext .ts --fix",
    "dev": "docker-compose build && docker-compose up -d",
    "prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml build && docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "postinstall": "patch-package"
  },
  "repository": {
    "type": "git",
    "url": "git@git.rwth-aachen.de:iptk/ss20/team-foxtrot/backend.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "author": "Team Foxtrot @ IPTK TU Darmstat",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.7",
    "@types/js-yaml": "^3.12.5",
    "@types/jsrsasign": "^8.0.5",
    "@types/lodash": "^4.14.159",
    "@types/mongo-sanitize": "^1.0.1",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.0.26",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/ws": "^7.2.6",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "js-yaml": "^3.14.0",
    "jsrsasign": "^8.0.23",
    "lodash": "^4.17.20",
    "mongo-sanitize": "^1.1.0",
    "mongoose": "^5.10.0",
    "patch-package": "^6.2.2",
    "swagger-ui-express": "^4.1.4",
    "typescript": "^3.9.7",
    "ws": "^7.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/chai-subset": "^1.3.3",
    "@types/mocha": "^7.0.2",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "chai": "^4.2.0",
    "chai-subset": "^1.6.0",
    "eslint": "^7.7.0",
    "mocha": "^8.1.1",
    "mongodb-memory-server": "^6.6.3",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.2"
  }
}
